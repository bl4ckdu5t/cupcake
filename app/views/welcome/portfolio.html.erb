<header class="header header-authentication">
	<nav class="page-navigation">
    <div id="js-historyBack"><svg class="icon icon-arrow-back"><use xlink:href="#icon-arrow-back"></use></svg></div>
    <div id="js-page-menu-trigger"><svg class="icon icon-more-vert"><use xlink:href="#icon-more-vert"></use></svg></div>
    <ul id="js-page-menu">
      <li><%= link_to 'Pricing', pricing_logo_path %></li>
      <li><%= link_to 'Help', help_path %></li>
      <li><%= link_to 'About us', about_us_path %></li>
    </ul>
  </nav>
	<%= link_to root_path do %><%= image_tag "logo-cap.png" %><% end %>
	<h1>Portfolio</h1>
</header>
<div class="portfolio-box">
	<nav class="portfolio-nav">
		<ul>
			<li><a href="javascript:void(0)" ng-click="all()" ng-class="{'active': state == 'all'}">All</a></li>
			<li><a href="javascript:void(0)" ng-click="showDraft()" ng-class="{'active': state == 'draft'}">Logos</a></li>
			<li><a href="javascript:void(0)" ng-click="showOpen()" ng-class="{'active': state == 'open'}">Websites</a></li>
			<li><a href="javascript:void(0)" ng-click="showClosed()" ng-class="{'active': state == 'closed'}">Stationeries</a></li>
		</ul>
	</nav>
	<main class="portfolio-gallery clearfix">
		<% (1..22).each do |x| %>
		<div class="portfolio-item" ng-show="state == '<%= x % 2 == 0 ? 'open' : 24 % x == 0 ? 'draft' : 'closed' %>' || state == 'all'">
			<%= image_tag "print_design_portfolio_designscook_#{x}.jpg", alt: 'portfolio item' %>
			<p>Client Design <%= x %></p>
		</div>
		<% end %>
	</main>
</div>