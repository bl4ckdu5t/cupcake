<% flash.each do |name, msg| %>
  <%= content_tag :div, "#{msg}<svg class='icon icon-clear notify-clear'><use xlink:href='#icon-clear'></use></svg>".html_safe, :class => 'notify' %>
<% end %>
<header class="header header-authentication">
  <nav class="page-navigation">
    <div id="js-historyBack"><svg class="icon icon-arrow-back"><use xlink:href="#icon-arrow-back"></use></svg></div>
    <div id="js-page-menu-trigger"><svg class="icon icon-more-vert"><use xlink:href="#icon-more-vert"></use></svg></div>
    <ul id="js-page-menu">
      <li><%= link_to 'Home', type_choice_path %></li>
      <li><%= link_to 'Help', help_path %></li>
      <li><%= link_to 'About us', about_us_path %></li>
    </ul>
  </nav>
  <%= link_to root_url do %>
  <%= image_tag "logo-cap.png" %>
  <% end %>
</header>

<div class="settings-box">
<nav class="settings-navigation">
  <ul>
    <li><%= link_to 'Account', edit_user_registration_path %></li>
    <li><%= link_to 'Profile', profile_settings_path, class: 'is_active' %></li>
  </ul>
</nav>
<%= form_for @settings, url: profile_update_path, html: {class: 'settings-form'} do |f|%>
  <div class="field">
    <%= f.label :picture, "Profile picture" %><br>
    <%= f.file_field 'picture' %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :postcode, "Postal code" %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="actions">
    <%= submit_tag "Update Profile", class: 'button button-bordered-brand button-large' %>
  </div>
<% end %>
</div>